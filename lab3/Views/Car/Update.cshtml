@{
}
<h1>Edytuj samochod</h1>
<form asp-controller="Car" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="Model"></label>
        <input class="form-control shadow-none" asp-for="Model" />
        <span class="text-danger" asp-validation-for="Model"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Capacity"></label>
        <input class="form-control shadow-none" asp-for="Capacity" />
        <span class="text-danger" asp-validation-for="Capacity"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Power"></label>
        <input class="form-control shadow-none" asp-for="Power" />
        <span asp-validation-for="Power"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EngineType">Typ silnika</label>
        <select class="form-control shadow-none" asp-for="EngineType" asp-items="@Html.GetEnumSelectList<Engine>()"> </select>
        <span asp-validation-for="EngineType"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RegistratioinNumber"></label>
        <input class="form-control shadow-none" asp-for="RegistratioinNumber" />
        <span asp-validation-for="RegistratioinNumber"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-dark" type="submit">Zapisz</button>
        <a class="btn btn-dark" asp-action="Index">Powrót do listy</a>
    </div>
</form>
