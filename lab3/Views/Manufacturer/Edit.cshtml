@using lab3_App.Models.CarModels
@model Manufacturer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Manufacturer</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ManufacturerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control shadow-none" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="Address.Country" class="control-label"></label>
                <input asp-for="Address.Country" class="form-control shadow-none" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>

                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control shadow-none" />
                <span asp-validation-for="Address.City" class="text-danger"></span>

                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control shadow-none" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>

                <label asp-for="Address.PostalCode" class="control-label"></label>
                <input asp-for="Address.PostalCode" class="form-control shadow-none" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Zapisz" class="btn btn-dark" />
                <a class="btn btn-dark" asp-action="Index">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
