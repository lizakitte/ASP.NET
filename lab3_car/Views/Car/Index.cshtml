@using lab3_car.Models
@model Dictionary<int, Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista samochodow</h1>
<a class="btn btn-primary" asp-controller="Car" asp-action="Create">Utworz samochod</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Producent
            </th>
            <th>
                Nr rejestracyjny
            </th>
            <th>
                Akcja
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Value.Model
                </td>
                <td>
                    @item.Value.Manufacturer
                </td>
                <td>
                    @item.Value.RegistratioinNumber
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Car" asp-action="Update" asp-route-id="@item.Key">Edytuj</a>
                    <a class="btn btn-outline-info" asp-controller="Car" asp-action="Details" asp-route-id="@item.Key">Szczegoly</a>
                    <a class="btn btn-outline-danger" asp-controller="Car" asp-action="Delete" asp-route-id="@item.Key">Usun</a>
                </td>
            </tr>
        }
    </tbody>
</table>